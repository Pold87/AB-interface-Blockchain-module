pragma solidity ^0.4.0;
contract Estimation {

int public localCount = 0;
int public mean = 0;

function vote(int x_n) public payable {

    localCount = localCount + 1;
    int delta = x_n - mean;	
    mean += delta / localCount; 
 }

function getMean() public view returns (int) {
   return mean;
 }
}
